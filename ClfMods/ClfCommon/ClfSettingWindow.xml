<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Scripts>
		<Script file="ClfSettingWindow.lua" />
	</Scripts>
	<Windows>

		<!-- Template -->

		<!-- ComboBox -->
		<Button name="Clf_Combo_selected_button_std" inherits="UO_Default_ComboBoxSelectedButton"  font="MyriadPro_14">
			<TextOffset x="10" y="2" />
		</Button>

		<Button name="Clf_Combo_menu_item_button_std" inherits="UO_Default_ComboBoxMenuItemButton" font="MyriadPro_14" textalign="left" >
			<TextOffset x="5" y="2" />
		</Button>

		<ComboBox name="ClfTemplateYouSeeChannelCombo" inherits="UO_Default_ComboBox" selectedbutton="Clf_Combo_selected_button_std" menuitembutton="Clf_Combo_menu_item_button_std" >
			<EventHandlers>
				<EventHandler event="OnSelChanged" function="ClfSettingWindow.onComboChangedYouSeeChannel" />
			</EventHandlers>
		</ComboBox>

		<!-- ComboBox Row -->
		<Window name="ClfTemplateClfTemplateYouSeeChannelComboRow">
			<Size>
				<AbsPoint x="200" y="27" />
			</Size>
			<Windows>
				<DynamicImage name="$parentImage" texture="ClfTexMonotoneGradient" handleinput="false">
					<Size>
						<AbsPoint x="16" y="16" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="0" y="4"/>
						</Anchor>
					</Anchors>
				</DynamicImage>
				<ComboBox name="$parentCombo" inherits="ClfTemplateYouSeeChannelCombo">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="25" y="0"/>
						</Anchor>
					</Anchors>
				</ComboBox>
			</Windows>
		</Window>

		<!-- FilterList Row -->
		<Button name="ClfTemplateYouSeeFilterRow" drawchildrenfirst="true">
			<Size>
				<AbsPoint x="200" y="28" />
			</Size>
			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="ClfSettingWindow.onToggleYouseeFilter"/>
			</EventHandlers>
			<Windows>
				<Label name="$parentFilterName" maxchars="64" wordwrap="false" font="MyriadPro_15" textalign="leftcenter" handleinput="false">
					<Size>
						<AbsPoint x="180" y="20" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentCheckBox">
							<AbsPoint x="10" y="-4" />
						</Anchor>
					</Anchors>
				</Label>
				<Button name="$parentCheckBox" inherits="UO_Default_Check_Button" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="0" y="4" />
						</Anchor>
					</Anchors>
				</Button>
			</Windows>
		</Button>


		<!-- YouSee Filter Setting Window -->
		<Window name="ClfYouSeeFiltersWindow" movable="true" layer="secondary" savesettings="false">
			<Size>
				<AbsPoint x="450" y="490" />
			</Size>
			<Anchors>
				<Anchor point="topleft" relativePoint="topleft" relativeTo="">
					<AbsPoint x="30" y="100" />
				</Anchor>
			</Anchors>
			<EventHandlers>
				<EventHandler event="OnInitialize" function="ClfSettingWindow.initYouSeeFilterWin"/>
				<EventHandler event="OnShutdown" function="ClfSettingWindow.shutdownYouSeeFilterWin"/>
			</EventHandlers>
			<Windows>

				<!-- Default chrome. Alter this at your own peril. -->
				<Window name="$parentChrome" inherits="UO_DefaultWindow">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft"/>
						<Anchor point="bottomright" relativePoint="bottomright"/>
					</Anchors>
				</Window>
				<!-- End of default chrome boilerplate code -->

				<Button name="$parentAcceptButton" inherits="UO_Default_Medium_Select_Button" textalign="center">
					<Anchors>
						<Anchor point="bottom" relativePoint="bottom" relativeTo="">
							<AbsPoint x="0" y="-18" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="ClfSettingWindow.submitYouSeeFilter"/>
					</EventHandlers>
				</Button>
				<Window name="$parentHeader">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="">
							<AbsPoint x="20" y="43"/>
						</Anchor>
						<Anchor point="topright" relativePoint="topright" relativeTo="">
							<AbsPoint x="-10" y="58"/>
						</Anchor>
					</Anchors>
					<Windows>
						<Label name="$parentFilter" maxchars="64" wordwrap="false" font="Arial_Black_14" textalign="leftcenter" handleinput="false">
							<Size>
								<AbsPoint x="220" y="15" />
							</Size>
							<Anchors>
								<Anchor point="left" relativePoint="left" relativeTo="">
									<AbsPoint x="0" y="0" />
								</Anchor>
							</Anchors>
							<Color r="195" g="195" b="195" />
						</Label>

						<Label name="$parentChannel" maxchars="64" wordwrap="false" font="Arial_Black_14" textalign="leftcenter" handleinput="false">
							<Size>
								<AbsPoint x="180" y="15" />
							</Size>
							<Anchors>
								<Anchor point="left" relativePoint="left" relativeTo="">
									<AbsPoint x="200" y="0" />
								</Anchor>
							</Anchors>
							<Color r="195" g="195" b="195" />
						</Label>
					</Windows>
				</Window>

				<Window name="$parentList">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="">
							<AbsPoint x="20" y="60"/>
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="">
							<AbsPoint x="-10" y="-50"/>
						</Anchor>
					</Anchors>
				</Window>

			</Windows>
		</Window>
		<!-- /ClfYouSeeFiltersWindow -->

	</Windows>
</Interface>
